---
import { Star, User, ArrowUpRight } from '@lucide/astro';

const reviews = [
  {
    name: "Suzan Mes",
    date: "1 jaar geleden",
    text: "Super blij met geleverd werk, 8 meter hoge daklijst ziet er weer toppie uit, bedankt John en co",
    stars: 5
  },
  {
    name: "Maryna Lapre-Pushkar",
    date: "2 jaar geleden",
    text: "Uitstekende service. Volgt afspraken, snelle communicatie. Dankjewel John!",
    stars: 5
  },
  {
    name: "Willy van Loopik",
    date: "3 jaar geleden",
    text: "Ramen zijn goed gezeemd. Vriendelijke mensen",
    stars: 5
  }
];
---

<section id="reviews" class="py-20 bg-white">
    <div class="container mx-auto px-4">
        <div class="text-center mb-12">
             <div class="inline-flex items-center gap-2 bg-sky-100 px-4 py-2 rounded-full text-sky-800 font-bold text-sm mb-4">
                <Star class="w-4 h-4 fill-current" />
                <span>Wijkfavoriet</span>
            </div>
            <h2 class="font-heading font-bold text-4xl text-navy mb-4">Wat je buren zeggen</h2>
            <p class="text-gray-600 text-lg max-w-2xl mx-auto">Wij zijn pas tevreden als jij dat bent. Sluit je aan bij de honderden tevreden klanten in de Betuwe.</p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            {reviews.map(review => (
                <div class="bg-gray-50 p-8 rounded-2xl shadow-sm border border-gray-100 relative group hover:shadow-md transition-shadow">
                    <!-- Google G Logo -->
                    <div class="absolute top-6 right-6 opacity-40 group-hover:opacity-60 transition-opacity">
                        <svg class="w-6 h-6" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                            <path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z" fill="#4285F4"/>
                            <path d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z" fill="#34A853"/>
                            <path d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z" fill="#FBBC05"/>
                            <path d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z" fill="#EA4335"/>
                        </svg>
                    </div>
                    
                    <div class="flex text-accent mb-4">
                        {[...Array(review.stars)].map(() => (
                            <Star class="w-4 h-4 fill-current" />
                        ))}
                    </div>
                    
                    <p class="text-gray-700 italic mb-6 leading-relaxed">"{review.text}"</p>
                    
                    <div class="flex items-center gap-3">
                        <div class="w-10 h-10 bg-blue-100 rounded-full flex items-center justify-center font-bold text-primary">
                            <User class="w-5 h-5" />
                        </div>
                        <div>
                            <p class="font-bold text-navy text-sm">{review.name}</p>
                            <p class="text-gray-500 text-xs">{review.date}</p>
                        </div>
                    </div>
                </div>
            ))}
        </div>
        
        <div class="text-center mt-12">
            <a href="https://www.google.com/search?q=johns+glazenwassersbedrijf" target="_blank" rel="noopener noreferrer" class="text-sky-700 font-bold hover:underline inline-flex items-center gap-1 group">
                Bekijk alle reviews op Google
                <ArrowUpRight class="w-4 h-4 transition-transform group-hover:-translate-y-0.5 group-hover:translate-x-0.5" />
            </a>
        </div>
    </div>
</section>
