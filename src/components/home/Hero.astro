---
import { Image } from "astro:assets";
import {
    Sparkles,
    CheckCircle2,
    ShieldCheck,
    Zap,
    Star,
    User,
} from "lucide-astro";
import theCrewImage from "../../assets/images/the-crew-jons-glazenwassersbedrijf.jpg";
---

<section class="relative bg-primary text-white overflow-hidden">
    <!-- Background Image/Video Placeholder -->
    <div class="absolute inset-0 bg-primary-dark z-0">
        <!-- Overlay opacity for text readability -->
        <div
            class="absolute inset-0 bg-gradient-to-r from-primary-dark/90 to-primary/70 mix-blend-multiply"
        >
        </div>
        <!-- Placeholder Pattern or Image: In production, replace with <Image /> -->
        <!-- <img src="/images/team-hero.jpg" alt="John en het team" class="w-full h-full object-cover mix-blend-overlay opacity-50" /> -->
    </div>

    <div
        class="container mx-auto px-4 pt-32 pb-24 md:pt-48 md:pb-32 relative z-10 grid grid-cols-1 md:grid-cols-2 gap-12 items-center"
    >
        <!-- Text Content -->
        <div class="space-y-6">
            <div
                class="inline-flex items-center gap-2 bg-white/10 backdrop-blur-sm px-4 py-2 rounded-full border border-white/20"
            >
                <Sparkles class="w-4 h-4 text-accent" />
                <span class="text-sm font-medium"
                    >De #1 Glazenwasser van de Betuwe</span
                >
            </div>

            <h1
                class="font-heading font-extrabold text-5xl md:text-6xl leading-tight text-shadow"
            >
                Stralend schone ramen, <span class="text-accent"
                    >zonder gedoe.</span
                >
            </h1>

            <p
                class="text-xl md:text-2xl text-blue-100 leading-relaxed max-w-lg"
            >
                Wij zorgen voor het complete plaatje: ramen, kozijnen en
                dakgoten. Vertrouwd, lokaal en met een glimlach.
            </p>

            <div class="flex flex-col sm:flex-row gap-4 pt-4">
                <a
                    href="/offerte"
                    class="bg-accent hover:bg-accent-dark text-navy font-bold text-lg py-4 px-8 rounded-xl shadow-xl transition-all hover:scale-105 hover:shadow-2xl flex items-center justify-center gap-2"
                >
                    <Zap class="w-5 h-5" />
                    <span>Bereken je prijs</span>
                </a>

                <a
                    href="#reviews"
                    class="bg-white/10 hover:bg-white/20 backdrop-blur-md text-white font-medium text-lg py-4 px-8 rounded-xl border border-white/30 transition-all flex items-center justify-center gap-2"
                >
                    <span>Bekijk reviews</span>
                </a>
            </div>

            <div class="pt-4 text-sm text-blue-200 flex items-center gap-4">
                <span class="flex items-center gap-1">
                    <CheckCircle2 class="w-4 h-4 text-green-400" />
                    <span>Binnen 1 minuut geregeld</span>
                </span>
                <span class="flex items-center gap-1">
                    <ShieldCheck class="w-4 h-4 text-accent" />
                    <span>Ruim 1000+ tevreden klanten</span>
                </span>
            </div>
        </div>

        <!-- Hero Image (Right side on Desktop) -->
        <div class="hidden md:block relative">
            <div class="relative animate-fade-in-up">
                <!-- Team Image -->
                <div class="rounded-2xl overflow-hidden shadow-2xl border-4 border-white/20">
                    <Image
                        src={theCrewImage}
                        alt="Het professionele team van John's Glazenwassersbedrijf uit de Betuwe"
                        width={800}
                        height={534}
                        loading="eager"
                        fetchpriority="high"
                        decoding="async"
                        class="w-full h-auto"
                    />
                </div>
                <!-- Floating Badge -->
                <a
                    href="https://www.google.com/search?q=johns+glazenwassersbedrijf"
                    target="_blank"
                    rel="noopener noreferrer"
                    class="absolute -bottom-4 -left-4 bg-white text-navy p-4 rounded-xl shadow-lg border-l-4 border-accent hover:shadow-xl transition-shadow"
                >
                    <div
                        class="flex items-center gap-1 font-heading font-bold text-lg"
                    >
                        <Star class="w-5 h-5 text-accent fill-current" />
                        <span>4.5/5 Sterren</span>
                    </div>
                    <p class="text-sm text-gray-600">op Google Reviews</p>
                </a>
            </div>
        </div>
    </div>

    <!-- Wave Separator at bottom -->
    <div
        class="absolute bottom-0 left-0 w-full overflow-hidden leading-none z-20"
    >
        <svg
            class="relative block w-full h-[60px] text-white"
            data-name="Layer 1"
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 1200 120"
            preserveAspectRatio="none"
        >
            <path
                d="M321.39,56.44c58-10.79,114.16-30.13,172-41.86,82.39-16.72,168.19-17.73,250.45-.39C823.78,31,906.67,72,985.66,92.83c70.05,18.48,146.53,26.09,214.34,3V0H0V27.35A600.21,600.21,0,0,0,321.39,56.44Z"
                class="fill-current"></path>
        </svg>
    </div>
</section>

<style>
    .text-shadow {
        text-shadow: 0 4px 12px rgba(0, 0, 0, 0.15);
    }
</style>
