---
import Layout from "../../layouts/Layout.astro";
import Header from "../../components/common/Header.astro";
import Footer from "../../components/common/Footer.astro";
import ServiceCards from "../../components/home/ServiceCards.astro";
---

<Layout title="Onze Diensten">
    <Header />
    <main>
        <section class="bg-primary text-white pt-32 pb-20 text-center">
            <div class="container mx-auto px-4">
                <h1 class="font-heading font-extrabold text-5xl mb-4">
                    Onze Diensten
                </h1>
                <p class="text-xl max-w-2xl mx-auto opacity-90">
                    Compleet buitenonderhoud voor particulieren en bedrijven. Van glasbewassing tot hoogwerkreiniging.
                </p>
            </div>
        </section>

        <ServiceCards />

        <!-- Why Choose Us Section -->
        <section class="py-20 bg-white">
            <div class="container mx-auto px-4 max-w-4xl">
                <div class="text-center mb-12">
                    <h2 class="font-heading font-bold text-3xl text-navy mb-4">
                        Waarom kiezen voor John's?
                    </h2>
                    <p class="text-lg text-gray-600">
                        Sinds 2007 zorgen wij voor tevreden klanten in de Betuwe
                    </p>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                    <div class="flex gap-4">
                        <div class="flex-shrink-0">
                            <div class="w-12 h-12 bg-accent rounded-full flex items-center justify-center text-navy font-bold text-xl">
                                ✓
                            </div>
                        </div>
                        <div>
                            <h3 class="font-heading font-bold text-xl text-navy mb-2">
                                VCA Gecertificeerd
                            </h3>
                            <p class="text-gray-600">
                                Veilig werken staat bij ons voorop. We zijn volledig gecertificeerd.
                            </p>
                        </div>
                    </div>

                    <div class="flex gap-4">
                        <div class="flex-shrink-0">
                            <div class="w-12 h-12 bg-accent rounded-full flex items-center justify-center text-navy font-bold text-xl">
                                ✓
                            </div>
                        </div>
                        <div>
                            <h3 class="font-heading font-bold text-xl text-navy mb-2">
                                Persoonlijke Service
                            </h3>
                            <p class="text-gray-600">
                                Je ziet altijd dezelfde gezichten. Geen anonieme uitvoering.
                            </p>
                        </div>
                    </div>

                    <div class="flex gap-4">
                        <div class="flex-shrink-0">
                            <div class="w-12 h-12 bg-accent rounded-full flex items-center justify-center text-navy font-bold text-xl">
                                ✓
                            </div>
                        </div>
                        <div>
                            <h3 class="font-heading font-bold text-xl text-navy mb-2">
                                Osmose Technologie
                            </h3>
                            <p class="text-gray-600">
                                Streeploos schoon zonder chemicaliën. Beter voor je ramen én het milieu.
                            </p>
                        </div>
                    </div>

                    <div class="flex gap-4">
                        <div class="flex-shrink-0">
                            <div class="w-12 h-12 bg-accent rounded-full flex items-center justify-center text-navy font-bold text-xl">
                                ✓
                            </div>
                        </div>
                        <div>
                            <h3 class="font-heading font-bold text-xl text-navy mb-2">
                                Lokaal Bedrijf
                            </h3>
                            <p class="text-gray-600">
                                Actief in de hele Betuwe. Snel ter plaatse en goed bereikbaar.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- CTA Section -->
        <section class="py-20 bg-gray-50 text-center">
            <div class="container mx-auto px-4">
                <h2 class="font-heading font-bold text-3xl text-navy mb-6">
                    Heb je een specifieke vraag?
                </h2>
                <p class="text-lg text-gray-600 mb-8">
                    Neem gerust contact met ons op voor persoonlijk advies
                </p>
                <div class="flex flex-col sm:flex-row gap-4 justify-center">
                    <a
                        href="/contact"
                        class="bg-primary hover:bg-primary/90 text-white font-bold py-3 px-8 rounded-lg transition-colors inline-block"
                    >
                        Neem contact op
                    </a>
                    <a
                        href="/offerte"
                        class="bg-accent hover:bg-accent-dark text-navy font-bold py-3 px-8 rounded-lg transition-colors inline-block"
                    >
                        Bereken je prijs
                    </a>
                </div>
            </div>
        </section>
    </main>
    <Footer />
</Layout>
